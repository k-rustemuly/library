						<div class="d-flex align-items-center justify-content-between">
							<div class="d-flex align-items-center">
								<a href="#">
									<img alt="Logo" src="/icon.png" class="logo-default h-45px h-lg-45px" />
									<img alt="Logo" src="/icon.png" class="logo-sticky h-45px h-lg-45px" />
								</a>
								<span style="margin-left: 15px;" class="d-inline-block mb-2 fs-2x fw-bolder text-dark">{{ hello }}</span>
							</div>
							<div class="text-end ms-1">
								<a href="#" class="btn btn-warning btn-icon btn-circle" data-bs-toggle="modal" data-bs-target="#about"><i class="fa fa-info"></i></a>
								<a href="#" class="btn btn-icon" data-bs-toggle="modal" data-bs-target="#search"><i class="fa fa-search" style="color: #ffc700;"></i></a>
							</div>
							
						</div>
					</div>
				</div>
			</div>
			<div class="mb-0">
				<div class="container">
					<span class="d-inline-block position-relative ms-2">
						<span class="d-inline-block mb-2 fs-2tx fw-bolder">
							{{ most_viewed }}
						</span>
					</span>
